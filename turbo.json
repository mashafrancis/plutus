{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "globalEnv": [
    "RESEND_API_KEY",
    "SUPABASE_SERVICE_ROLE_KEY",
    "BASELIME_API_KEY",
    "OPENPANEL_SECRET_KEY"
  ],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env.development.local",
        ".env.local",
        ".env.development",
        ".env"
      ]
    },
    "start": {
      "cache": false
    },
    "check-types": {},
    "format": {
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo"]
    },
    "clean": {
      "cache": false
    },
    "db:setup": {
      "cache": false
    }
  }
}
