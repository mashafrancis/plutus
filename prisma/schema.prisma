// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider               = "prisma-client"
  output                 = "../generated/prisma"
  engineType             = "client"
  runtime                = "nodejs"
  importFileExtension    = "ts"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
}

datasource db {
  provider = "postgresql"
}

model Subscription {
  id          String   @id @default(uuid())
  /// @encrypted
  name        String
  /// @encrypted
  notes       String?
  url         String
  /// @encrypted
  price       String   @default("0")
  paid        String
  notify      Boolean  @default(false)
  date        String
  categoryId  String?
  accountId   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
  userId      String
  active      Boolean? @default(true)
  cancelledAt String?
  nameHash    String?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([categoryId])
  @@index([accountId])
  @@map("subscription")
}

model Expense {
  id               String       @id @default(uuid())
  /// @encrypted
  name             String
  /// @encrypted
  notes            String?
  /// @encrypted
  price            String        @default("0")
  paid_via         String        @default("")
  category         String
  categoryId       String?
  accountId        String?
  date             String
  recurring        Boolean       @default(false)
  recurringFrequency String?     // monthly, weekly, quarterly, yearly
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @default(now()) @updatedAt
  userId           String
  nameHash         String?
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags             ExpenseTag[]

  @@index([userId])
  @@index([categoryId])
  @@index([accountId])
  @@index([recurring])
  @@map("expense")
}

model Income {
  id               String       @id @default(uuid())
  /// @encrypted
  name             String
  /// @encrypted
  notes            String?
  /// @encrypted
  price            String        @default("0")
  source           String
  categoryId       String?
  accountId        String?
  date             String
  recurring        Boolean       @default(false)
  recurringFrequency String?     // monthly, weekly, quarterly, yearly, semi-annual
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @default(now()) @updatedAt
  userId           String
  nameHash         String?
  user             User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags             IncomeTag[]

  @@index([userId])
  @@index([categoryId])
  @@index([accountId])
  @@index([recurring])
  @@map("income")
}

model Investment {
  id        String   @id @default(uuid())
  /// @encrypted
  name      String
  /// @encrypted
  notes     String?
  /// @encrypted
  price     String   @default("0")
  /// @encrypted
  units     String   @default("0")
  category  String
  categoryId String?
  accountId String?
  date      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  userId    String
  nameHash  String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([categoryId])
  @@index([accountId])
  @@map("investment")
}

model Feedback {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  userId    String

  @@map("feedback")
}

model Contact {
  id        Int      @id @default(autoincrement())
  message   String
  subject   String
  email     String
  createdAt DateTime @default(now())

  @@map("contact")
}

model User {
  id                         String            @id @default(uuid())
  name                       String
  email                      String
  emailVerified              Boolean
  image                      String?
  currency                   String            @default("KES")
  locale                     String            @default("en")
  order_identifier           String?
  order_store_id             String?
  order_number               String?
  order_status               String?
  billing_start_date         String?
  plan_status                String            @default("basic")
  trial_start_date           DateTime          @default(now())
  usage                      Int               @default(0)
  basic_usage_limit_email    Boolean           @default(false)
  new_signup_email           Boolean           @default(false)
  premium_plan_expired_email Boolean           @default(false)
  premium_usage_limit_email  Boolean           @default(false)
  monthly_email_report       Boolean           @default(false)
  expenses                   Expense[]
  income                     Income[]
  investments                Investment[]
  subscriptions              Subscription[]
  createdAt                  DateTime          @default(now())
  updatedAt                  DateTime          @default(now()) @updatedAt
  sessions                   Session[]
  accounts                   Account[]
  financialAccounts          FinancialAccount[]
  categories                 Category[]
  tags                       Tag[]
  budgets                    Budget[]
  liabilities                Liability[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id @default(uuid())
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(uuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @default(now()) @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([identifier])
  @@map("verification")
}

model FinancialAccount {
  id             String   @id @default(uuid())
  /// @encrypted
  name           String
  type           String   // checking, savings, credit, cash, investment
  currentBalance Decimal   @default(0) @db.Decimal(19, 4)
  currency       String    @default("USD")
  isDefault      Boolean   @default(false)
  isArchived     Boolean   @default(false)
  /// @encrypted
  notes          String?
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([userId])
  @@map("financial_account")
}

model Category {
  id         String   @id @default(uuid())
  name       String
  icon       String?
  color      String?
  type       String   // expense, income
  parentId   String?
  isArchived Boolean  @default(false)
  isDefault  Boolean  @default(false)
  notes      String?
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([type])
  @@map("category")
}

model Tag {
  id       String       @id @default(uuid())
  name     String
  userId   String
  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  expenses ExpenseTag[]
  incomeEntries IncomeTag[]

  @@unique([userId, name])
  @@index([userId])
  @@map("tag")
}

model IncomeTag {
  id        String   @id @default(uuid())
  incomeId  String
  tagId     String
  income    Income   @relation(fields: [incomeId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([incomeId, tagId])
  @@index([incomeId])
  @@index([tagId])
  @@map("income_tag")
}

model ExpenseTag {
  id        String   @id @default(uuid())
  expenseId String
  tagId     String
  expense   Expense  @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@unique([expenseId, tagId])
  @@index([expenseId])
  @@index([tagId])
  @@map("expense_tag")
}

model Budget {
  id                 String  @id @default(uuid())
  categoryId         String?
  limit              Decimal @db.Decimal(19, 4)
  period             String  // monthly, weekly, quarterly, yearly
  rolloverEnabled    Boolean @default(false)
  alertThreshold     Int     @default(80)
  alertThresholdType String  @default("percentage") // percentage or dollar
  userId             String
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([categoryId])
  @@map("budget")
}

model Liability {
  id             String   @id @default(uuid())
  /// @encrypted
  name           String
  type           String
  balance        Decimal  @db.Decimal(19, 4)
  interestRate   Decimal? @db.Decimal(5, 4)
  minimumPayment Decimal? @db.Decimal(19, 4)
  accountId      String
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accountId])
  @@map("liability")
}
